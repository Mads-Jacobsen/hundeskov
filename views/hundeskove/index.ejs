<% layout('layout/boilerplate') %>
  <div class="container">
      <div id="front-map"></div>
      <h1 class="title is-1 mt-4">Alle hundeskove</h1>
        <section class="section">
          <% for (let hundeskov of hundeskove) {%>
          <div class="container is-max-desktop">
            <div class="card mb-4">
              <div class="card-image">
                <figure class="image is-4by3">
                  <% if(hundeskov.billede.length) {%>
                    <img crossorigin="anonymous" src="<%= hundeskov.billede[0].url %>" alt="Placeholder image" class="image">
                  <% } else { %>
                    <img crossorigin="anonymous" src="/img/placeholder.jpg" class="image" alt="..."> %>
                    <% } %>
                </figure>
              </div>
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <p class="title is-4"><%= hundeskov.titel %></p>
                  </div>
                </div>
                <div class="content">
                  <%= hundeskov.beskrivelse %>
                  <br>
                </div>
              </div>
              <footer class="card-footer">
                <a href="/hundeskove/<%= hundeskov.id %>" class="card-footer-item">LÃ¦s mere</a>
              </footer>
            </div>
          </div>
          <% } %>
        </section>
  </div>
 
        <script>
          const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
          const hundeskove = { features: <%- JSON.stringify(hundeskove) %>}
        </script>
        <script src="/js/clusterMap.js"></script>
        <script src="/js/map.js"></script>
